<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/about_app_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".aboutApplication.AboutApplicationActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_app_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@android:color/black">

    <ImageView
      android:layout_width="120dp"
      android:layout_height="60dp"
      android:src="@drawable/logo"
      android:paddingLeft="@dimen/activity_horizontal_margin"/>
  </android.support.v7.widget.Toolbar>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar_app_description">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <android.support.v7.widget.CardView
        android:id="@+id/app_description_title_my_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
          android:id="@+id/app_description_relative_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
            android:id="@+id/app_description_play_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

          <TextView
            android:id="@+id/app_description_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/app_description_play_arrow"
            android:layout_toEndOf="@+id/app_description_play_arrow"
            android:text="@string/app_description_title"/>

          <TextView
            android:id="@+id/app_description_title_ang"
            android:layout_below="@+id/app_description_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="@string/app_description_title_ang"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_description_text_pl_my_card_view_layout"
        android:layout_below="@+id/app_description_title_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_description_text_pl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_description_text_pl"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_description_text_ang_my_card_view_layout"
        android:layout_below="@+id/app_description_text_pl_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_description_text_ang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="italic"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_description_text_ang"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_author_title_my_card_view_layout"
        android:layout_below="@+id/app_description_text_ang_my_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
          android:id="@+id/app_author_relative_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
            android:id="@+id/app_author_play_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

          <TextView
            android:id="@+id/app_author_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/app_author_play_arrow"
            android:layout_toEndOf="@+id/app_author_play_arrow"
            android:text="@string/app_author_title"/>

          <TextView
            android:id="@+id/app_author_title_ang"
            android:layout_below="@+id/app_author_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="@string/app_author_title_ang"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_author_text_pl_my_card_view_layout"
        android:layout_below="@+id/app_author_title_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/github_profile_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/github_profile"/>
          <TextView
              android:id="@+id/app_author_text_pl"
              android:layout_below="@+id/github_profile_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginStart="10dp"
              android:gravity="center"
              android:textColor="@color/primary_text"
              android:textSize="15sp"
              android:text="@string/app_author_text_pl"/>

        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_author_text_ang_my_card_view_layout"
        android:layout_below="@+id/app_author_text_pl_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_author_text_ang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="italic"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_author_text_ang"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_version_title_my_card_view_layout"
        android:layout_below="@+id/app_author_text_ang_my_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
          android:id="@+id/app_version_relative_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
            android:id="@+id/app_version_play_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

          <TextView
            android:id="@+id/app_version_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/app_version_play_arrow"
            android:layout_toEndOf="@+id/app_version_play_arrow"
            android:text="@string/app_version_title"/>

          <TextView
            android:id="@+id/app_version_title_ang"
            android:layout_below="@+id/app_version_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="@string/app_version_title_ang"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_version_text_pl_my_card_view_layout"
        android:layout_below="@+id/app_version_title_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_version_text_pl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_version_text_pl"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_version_text_ang_my_card_view_layout"
        android:layout_below="@+id/app_version_text_pl_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_version_text_ang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="italic"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_version_text_ang"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_error_title_my_card_view_layout"
        android:layout_below="@+id/app_version_text_ang_my_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
          android:id="@+id/app_error_relative_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
            android:id="@+id/app_error_play_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

          <TextView
            android:id="@+id/app_error_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/app_error_play_arrow"
            android:layout_toEndOf="@+id/app_error_play_arrow"
            android:text="@string/app_error_title"/>

          <TextView
            android:id="@+id/app_error_title_ang"
            android:layout_below="@+id/app_error_title_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="@string/app_error_title_ang"/>
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_error_text_pl_my_card_view_layout"
        android:layout_below="@+id/app_error_title_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_error_text_pl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_error_text_pl"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/app_error_text_ang_my_card_view_layout"
        android:layout_below="@+id/app_error_text_pl_my_card_view_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
          android:id="@+id/app_error_text_ang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="italic"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textColor="@color/primary_text"
          android:textSize="15sp"
          android:text="@string/app_error_text_ang"/>
      </android.support.v7.widget.CardView>
    </RelativeLayout>
  </ScrollView>
</RelativeLayout>