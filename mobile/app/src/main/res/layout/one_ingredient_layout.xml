<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/one_ingredient_layout"
  android:layout_width="match_parent"
  android:background="@color/white_transparent"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:focusable="true"
  android:layout_centerHorizontal="true"
  android:layout_centerVertical="true"
  android:orientation="vertical">
  <LinearLayout
    android:id="@+id/oneIngredientLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/menuImageView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="0.1"
      android:clickable="false"
      android:src="@drawable/ic_menu"/>
    <EditText
      android:id="@+id/ingredientQuantityEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:ems="10"
      android:hint="Ilość"
      android:inputType="number"/>
    <Spinner
      android:id="@+id/ingredientUnitSpinner"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:entries="@array/ingredients_unit_array"/>
    <ImageView
      android:id="@+id/deleteImageView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:clickable="true"
      android:src="@android:drawable/ic_delete"/>
  </LinearLayout>
  <EditText
    android:id="@+id/ingredientNameEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.1"
    android:ems="10"
    android:hint="Nazwa składnika"
    android:inputType="textPersonName"/>
</LinearLayout>
