<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/my_one_card_gridview_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginRight="@dimen/activity_horizontal_margin"
  android:layout_marginLeft="@dimen/activity_horizontal_margin"
  android:background="@color/white"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?android:attr/selectableItemBackground"
  android:orientation="vertical"
  card_view:cardBackgroundColor="@color/white"
  card_view:cardCornerRadius="0dp"
  card_view:cardElevation="0dp">

  <ImageView
    android:id="@+id/category_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="50"
    android:src="@mipmap/ic_image"/>

  <RelativeLayout
    android:id="@+id/my_one_card_gridview_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
      android:id="@+id/text_view_first_empty_line"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text=""
      android:textSize="30dp"/>

    <TextView
      android:id="@+id/text_view_category_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@+id/text_view_first_empty_line"
      android:text="Category"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:textColor="@color/black"
      android:textSize="30dp"/>

    <TextView
      android:id="@+id/text_view_second_empty_line"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@+id/text_view_category_name"
      android:text=""
      android:textSize="30dp"/>
  </RelativeLayout>


</android.support.v7.widget.CardView>