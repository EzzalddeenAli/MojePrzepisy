<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_add_steps_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:background="@color/primary_light"
  tools:context=".add_recipe.add_recipe.add_steps.AddStepsActivityView">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_add_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@android:color/black">

    <ImageView
      android:layout_width="120dp"
      android:layout_height="60dp"
      android:src="@drawable/logo"
      android:paddingLeft="@dimen/activity_horizontal_margin"/>
  </android.support.v7.widget.Toolbar>

  <ScrollView
    android:id="@+id/scrollViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_add_step">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/addStepsRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"/>
  </ScrollView>
  <android.support.design.widget.FloatingActionButton
    android:id="@+id/addStepFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:visibility="visible"
    android:clickable="true"
    android:focusable="true"
    android:elevation="6dp"
    app:srcCompat="@android:drawable/ic_input_add"
    android:tint="@android:color/white"
    app:backgroundTint="@color/accent"/>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/previousActionFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:clickable="true"
    android:focusable="true"
    android:elevation="6dp"
    android:tint="@android:color/white"
    android:visibility="visible"
    app:backgroundTint="@color/navigation_fab"
    app:srcCompat="@mipmap/ic_skip_previous"/>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/nextActionFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:clickable="true"
    android:focusable="true"
    android:elevation="6dp"
    android:tint="@android:color/white"
    android:visibility="visible"
    app:backgroundTint="@color/navigation_fab"
    app:srcCompat="@mipmap/ic_skip_next"/>
</RelativeLayout>