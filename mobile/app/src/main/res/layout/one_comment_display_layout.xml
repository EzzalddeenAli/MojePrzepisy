<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/ingredient_display_my_card_view_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dp"
  android:background="@color/creamy"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?android:attr/selectableItemBackground"
  android:orientation="vertical"
  card_view:cardBackgroundColor="@color/white"
  card_view:cardCornerRadius="10dp"
  card_view:cardElevation="10dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/commentIconImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      card_view:srcCompat="@mipmap/ic_comment"/>
    <TextView
      android:id="@+id/userNameTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/commentIconImageView"
      android:text="TextView"/>
    <TextView
      android:id="@+id/createTimeTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:text="TextView"/>
    <TextView
      android:id="@+id/commentTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/primary_text"
      android:layout_below="@+id/commentIconImageView"
      android:text="TextView"/>

    <RelativeLayout
      android:id="@+id/editAndDeleteRecipeRelativeLayout"
      android:layout_below="@+id/commentTextView"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
          android:id="@+id/editUserRecipeImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:src="@android:drawable/ic_menu_edit"/>
        <ImageView
          android:id="@+id/deleteUserRecipeImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@android:drawable/ic_menu_delete"/>
      </LinearLayout>
    </RelativeLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>