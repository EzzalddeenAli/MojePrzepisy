<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".recipeDetails.commentDetails.CommentDisplayFragment">

  <ScrollView
    android:id="@+id/scrollViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/commentQtyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 komentarzy"
        android:background="@color/creamy"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/commentsDisplayRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/commentQtyTextView">
      </android.support.v7.widget.RecyclerView>
      <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentsDisplayRecyclerView"
        android:background="@color/creamy"
        android:layout_marginTop="10dp"
        android:hint="Dodaj komentarz..."
        android:textColorHint="@color/secondary_text"
        android:ems="10"
        android:inputType="textMultiLine"/>
      <Button
        android:id="@+id/addCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentEditText"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_page_buttons"
        android:text="Dodaj komentarz"/>
    </RelativeLayout>
  </ScrollView>
</FrameLayout>