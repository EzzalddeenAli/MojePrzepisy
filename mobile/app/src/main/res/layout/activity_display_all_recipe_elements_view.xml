<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_add_ingredients_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:background="@color/primary_light"
  tools:context=".add_recipe.add_recipe.display_all_recipe_elements.DisplayAllRecipeElementsActivityView">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_whole_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@android:color/black">
  </android.support.v7.widget.Toolbar>

  <ScrollView
    android:id="@+id/scrollViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_whole_recipe">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/recipeMainInfoTextViewEOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:text="Przepis"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/addMainRecipeInfoRecyclerView"
        android:layout_below="@+id/recipeMainInfoTextViewEOL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
      </android.support.v7.widget.RecyclerView>

      <Button
        android:id="@+id/recipeEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addMainRecipeInfoRecyclerView"
        android:text="Edytuj główne informacje o przepisie"/>

      <TextView
        android:id="@+id/ingredientsTextViewEOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeEditButton"
        android:text="Składniki:"
        android:textColor="@color/primary_text"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/addIngredientsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientsTextViewEOL"
        android:scrollbars="vertical"/>

      <Button
        android:id="@+id/IngredientsEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addIngredientsRecyclerView"
        android:text="Edytuj główne informacje o przepisie"/>

      <TextView
        android:id="@+id/stepsTextViewEOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IngredientsEditButton"
        android:text="Kroki:"
        android:textColor="@color/primary_text"/>


      <android.support.v7.widget.RecyclerView
        android:id="@+id/addStepsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepsTextViewEOL"
        android:scrollbars="vertical"/>

      <Button
        android:id="@+id/StepsEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStepsRecyclerView"
        android:text="Edytuj główne informacje o przepisie"/>

      <Button
        android:id="@+id/saveRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/StepsEditButton"
        android:text="Zapisz przepis"/>

    </RelativeLayout>
  </ScrollView>
</RelativeLayout>