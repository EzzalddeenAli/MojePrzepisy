<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_add_ingredients_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:background="@color/primary_light"
  tools:context=".addRecipe.displayRecipe.DisplayRecipeActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_whole_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@android:color/black">

    <ImageView
      android:layout_width="120dp"
      android:layout_height="60dp"
      android:src="@drawable/logo"
      android:paddingLeft="@dimen/activity_horizontal_margin"/>
  </android.support.v7.widget.Toolbar>

  <TextView
    android:id="@+id/informationTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_whole_recipe"
    android:textColor="@color/red"
    android:text=""/>
  <ScrollView
    android:id="@+id/scrollViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/informationTextView">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <LinearLayout
        android:id="@+id/recipeMainInfoLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/recipeMainInfoTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@color/blue_transparent"
          android:textColor="@color/primary_text"
          android:textSize="18sp"/>
        <ImageView
          android:id="@+id/recipeEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/blue_transparent"
          app:srcCompat="@android:drawable/ic_menu_edit"/>
      </LinearLayout>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/addMainRecipeInfoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/recipeMainInfoLayoutEOL"
        android:scrollbars="vertical">
      </android.support.v7.widget.RecyclerView>

      <LinearLayout
        android:id="@+id/ingredientsLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addMainRecipeInfoRecyclerView"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/ingredientsTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="SkÅ‚adniki:"
          android:background="@color/blue_transparent"
          android:textColor="@color/primary_text"
          android:textSize="@dimen/edit_text_size"/>
        <ImageView
          android:id="@+id/ingredientsEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/blue_transparent"
          app:srcCompat="@android:drawable/ic_menu_edit"/>
      </LinearLayout>
      <android.support.v7.widget.RecyclerView
        android:id="@+id/addIngredientsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/ingredientsLayoutEOL"
        android:scrollbars="vertical"/>

      <LinearLayout
        android:id="@+id/stepsLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addIngredientsRecyclerView"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/stepsTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="Kroki:"
          android:background="@color/blue_transparent"
          android:textColor="@color/primary_text"
          android:textSize="@dimen/edit_text_size"/>
        <ImageView
          android:id="@+id/stepsEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/blue_transparent"
          app:srcCompat="@android:drawable/ic_menu_edit"/>
      </LinearLayout>
      <android.support.v7.widget.RecyclerView
        android:id="@+id/addStepsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/stepsLayoutEOL"
        android:scrollbars="vertical"/>

      <ImageView
        android:id="@+id/saveRecipeImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/addStepsRecyclerView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_save"/>

    </RelativeLayout>
  </ScrollView>
</RelativeLayout>