<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_add_ingredients_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:background="@color/primary_light"
  tools:context=".add_recipe.add_recipe.display_all_recipe_elements.DisplayAllRecipeElementsActivityView">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_whole_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@android:color/black">
  </android.support.v7.widget.Toolbar>

  <ScrollView
    android:id="@+id/scrollViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_whole_recipe">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <LinearLayout
        android:id="@+id/recipeMainInfoLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/recipeMainInfoTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="Główne informacje:"
          android:textColor="@color/primary_text"
          android:textSize="18sp"/>
        <ImageView
          android:id="@+id/recipeEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@android:drawable/ic_menu_edit"/>

      </LinearLayout>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/addMainRecipeInfoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeMainInfoLayoutEOL"
        android:scrollbars="vertical">
      </android.support.v7.widget.RecyclerView>

      <View
        android:id="@+id/deviderOne"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/addMainRecipeInfoRecyclerView"
        android:background="@android:color/darker_gray"/>

      <LinearLayout
        android:id="@+id/ingredientsLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/deviderOne"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/ingredientsTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="Składniki:"
          android:textColor="@color/primary_text"
          android:textSize="18sp"/>
        <ImageView
          android:id="@+id/ingredientsEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@android:drawable/ic_menu_edit"/>
      </LinearLayout>
      <android.support.v7.widget.RecyclerView
        android:id="@+id/addIngredientsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientsLayoutEOL"
        android:scrollbars="vertical"/>

      <View
        android:id="@+id/deviderTwo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/addIngredientsRecyclerView"
        android:background="@android:color/darker_gray"/>

      <LinearLayout
        android:id="@+id/stepsLayoutEOL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/deviderTwo"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/stepsTextViewEOL"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="Kroki:"
          android:textColor="@color/primary_text"
          android:textSize="18sp"/>
        <ImageView
          android:id="@+id/stepsEditImageView"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@android:drawable/ic_menu_edit"/>
      </LinearLayout>
      <android.support.v7.widget.RecyclerView
        android:id="@+id/addStepsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepsLayoutEOL"
        android:scrollbars="vertical"/>

      <ImageView
        android:id="@+id/saveRecipeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStepsRecyclerView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_save"/>

    </RelativeLayout>
  </ScrollView>
</RelativeLayout>